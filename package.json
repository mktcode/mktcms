{
  "name": "mktcms",
  "version": "0.2.13",
  "description": "Simple CMS module for Nuxt",
  "repository": "mktcode/mktcms",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/types.d.mts",
      "import": "./dist/module.mjs"
    }
  },
  "main": "./dist/module.mjs",
  "typesVersions": {
    "*": {
      ".": [
        "./dist/types.d.mts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prepack": "nuxt-module-build build",
    "dev": "npm run dev:prepare && nuxi dev playground",
    "dev:build": "nuxi build playground",
    "dev:prepare": "nuxt-module-build build --stub && nuxt-module-build prepare && nuxi prepare playground",
    "release": "npm run lint && npm run test && npm run prepack && changelogen --release && npm publish && git push --follow-tags",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:unit": "vitest run test/unit",
    "test:watch": "vitest watch",
    "test:types": "vue-tsc --noEmit && cd playground && vue-tsc --noEmit",
    "css": "tailwindcss -i ./src/runtime/app/styles/admin.css -o ./src/runtime/app/styles/admin.min.css --minify",
    "css:watch": "tailwindcss -i ./src/runtime/app/styles/admin.css -o ./src/runtime/app/styles/admin.min.css --minify --watch"
  },
  "dependencies": {
    "@nuxt/kit": "^4.2.2",
    "@nuxtjs/mdc": "^0.20.1",
    "@types/ejs": "^3.1.5",
    "@vueuse/core": "^14.2.1",
    "csv-parse": "^6.1.0",
    "csv-stringify": "^6.6.0",
    "defu": "^6.1.4",
    "ejs": "^4.0.1",
    "marked": "^17.0.3",
    "monaco-editor": "^0.55.1",
    "nodemailer": "^7.0.13",
    "sharp": "^0.34.5",
    "simple-git": "^3.32.2",
    "unzipper": "^0.12.3",
    "yaml": "^2.8.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@nuxt/devtools": "^3.2.1",
    "@nuxt/eslint-config": "^1.15.1",
    "@nuxt/module-builder": "^1.0.2",
    "@nuxt/schema": "^4.2.2",
    "@nuxt/test-utils": "^3.23.0",
    "@tailwindcss/cli": "^4.2.0",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^25.3.0",
    "@types/nodemailer": "^7.0.11",
    "@types/unzipper": "^0.10.11",
    "changelogen": "^0.6.2",
    "eslint": "^9.39.3",
    "nuxt": "^4.2.2",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.2.5"
  }
}
